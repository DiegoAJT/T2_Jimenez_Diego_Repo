@model IEnumerable<T2_Jimenez_Diego.Models.DistribuidorPeru>
@{
    ViewData["Title"] = "DistribuidorPeru";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DistribuidorPeru</h1>

<div class="container pt-3">
    <div class="rom pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Distribuidores del Peru</h2>
        </div>
        <div class="col-6"></div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre Distribuidor</th>
                    <th>Razon Social</th>
                    <th>Telefono</th>
                    <th>Año inicio operaciòn</th>
                    <th>Contacto</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="20%">@item.NombreDistribuidor</th>
                        <th width="20%">@item.RazonSocial</th>
                        <th width="20%">@item.Telefono</th>
                        <th width="20%">@item.AnioInicioOperacion</th>
                        <th width="20%">@item.Contacto</th>
                        <th></th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No existe ningun registro de distribuidores</p>
    }


</div>
